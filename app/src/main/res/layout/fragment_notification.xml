<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment"
    >

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/NotifEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the number of days you would like to be notified before your subscriptions are due:"
        android:gravity="center"
        android:padding="24dp"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/EditTextFrag"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/NotifEdit"
        android:layout_marginBottom="-61dp"
        android:inputType="number"
        android:hint="Enter Notification Preference"
        android:padding="50px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotifEdit"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="-59dp"
        android:layout_toRightOf="@+id/EditTextFrag"
        android:id="@+id/Submit"
        android:text="@string/Submit" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="500px"
        android:layout_height="200px"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>

</FrameLayout>