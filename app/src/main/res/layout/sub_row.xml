<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7BB1D5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bill_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/message_text"
        android:src="@drawable/bill_icon">

    </ImageView>

    <TextView
        android:id="@+id/subscription_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/bill_image"
        >
    </TextView>
    <TextView
        android:id="@+id/subscription_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/subscription_name"
        >
    </TextView>

</LinearLayout>